{
  "manifest_version": 3,
  "name": "Resaltador de palabras",
  "version": "1.0",
  "description": "Resalta la palabra 'nueva' en todas las p√°ginas web",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
